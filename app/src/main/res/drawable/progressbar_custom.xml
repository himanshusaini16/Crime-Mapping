<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1620">

    <shape
        android:innerRadius="20dp"
        android:shape="ring"
        android:thickness="3dp"
        android:useLevel="false" >
        <size
            android:height="48dp"
            android:width="48dp" />

        <gradient
            android:centerColor="#ff3a5184"
            android:centerY="0.5"
            android:endColor="#ff253E77"
            android:startColor="#3f00194b"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>